Host *
    AddKeysToAgent yes
    # https://heipei.github.io/2015/02/26/SSH-Agent-Forwarding-considered-harmful/
    # ForwardAgent yes

    #Â For old systems:
    HostKeyAlgorithms +ssh-rsa-cert-v01@openssh.com
    HostKeyAlgorithms +ssh-rsa
    PubkeyAcceptedAlgorithms +ssh-rsa-cert-v01@openssh.com

Include ~/.ssh/work.d/*
Include ~/.ssh/conf.d/*
