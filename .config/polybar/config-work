[module/vpncheck]
type = custom/script
interval = 10
format = <label>
if_exec = "pgrep openvpn"
; To print tun0 ip address in label
exec = "ip a | grep tun0 | tail -n 1 | awk '{print $2}'"
; label = "ÔÉÅ vpn %output%"
format-prefix = "Ôàõ "
; format-prefix-foreground = ${colors.red}
format-underline = ${colors.red}
label = "vpn %output%"

