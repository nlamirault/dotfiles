;=====================================================
;			C O L O R S
;=====================================================

# Tron like

[colors]

xcolor0 = #0C141F
xcolor1 = #6FC3DF
xcolor2 = #E6FFFF
xcolor3 = #FFE64D
xcolor4 = #DF740C

;=====================================================
;			T H E M E
;=====================================================

# Colors to set:
#
# - background
# - foreground
# - alert
# - accent
#
# module/i3:
# - i3-mode-foreground
# - i3-focused-foreground
# - i3-visible-foreground
#
# module/xwindow
# - xwindow-prefix-foreground
#
# module/xkeyboard
# - xkeyboard-prefix-foreground
#
# module/cpu
# - cpu-prefix-foreground
#
# module/memory
# - memory-prefix-foreground
#
# module/filesystem
# - fs-mounted-prefix-foreground

# modume/wired-network
# - wired-connected-prefix-foreground
# - wired-disconnected-prefix-foreground
# - wired-speedup-prefix-foreground
# - wired-speeddown-prefix-foreground

# module/wireless-network
# - wireless-connected-prefix-foreground
# - wireless-disconnected-prefix-foreground
# - wireless-speedup-prefix-foreground
# - wireless-speeddown-prefix-foreground

# module/vpncheck
# - vpn-connected-prefix-foreground

# module/playctl
# - playctl-foreground

# module/powermenu
# - powermenu-foreground

# module/music
# - music-foreground

# module/notifications
# - notifications-foreground

# module/volume
# - volume-muted-foreground
# - volume-foreground

# module/battery
# - battery-charging-foreground
# - battery-full-foreground

# module/clock
# - clock-foreground

[theme]

background = ${colors.xcolor0}
foreground = ${colors.xcolor1}
alert = #4c566a
accent = #d8dee9

i3-mode-foreground = ${colors.xcolor1}
i3-focused-foreground = ${colors.xcolor2}
i3-visible-foreground = ${colors.xcolor3}

xwindow-prefix-foreground = ${colors.xcolor2}

xkeyboard-prefix-foreground = ${colors.xcolor4}

cpu-prefix-foreground = ${colors.xcolor1}

memory-prefix-foreground = ${colors.xcolor1}

fs-mounted-prefix-foreground = ${colors.xcolor3}

wired-connected-prefix-foreground = ${colors.xcolor2}
wired-disconnected-prefix-foreground = ${colors.xcolor2}
wired-speedup-prefix-foreground = ${colors.xcolor3}
wired-speeddown-prefix-foreground = ${colors.xcolor4}

wireless-connected-prefix-foreground = ${colors.xcolor2}
wireless-disconnected-prefix-foreground = ${colors.xcolor2}
wireless-speedup-prefix-foreground = ${colors.xcolor3}
wireless-speeddown-prefix-foreground = ${colors.xcolor4}

vpn-connected-prefix-foreground = ${colors.xcolor1}

playctl-foreground = ${colors.xcolor1}

powermenu-foreground = ${colors.xcolor3}

music-foreground = ${colors.xcolor1}

notifications-foreground = ${colors.xcolor3}

volume-foreground = ${colors.xcolor4}
volume-muted-foreground = ${colors.xcolor4}

battery-charging-foreground = ${colors.xcolor2}
battery-full-foreground = ${colors.xcolor2}

clock-foreground = ${colors.xcolor3}
