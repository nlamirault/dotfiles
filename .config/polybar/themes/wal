wired-speeddown-prefix-foreground = ${colors.xcolor2}

wireless-connected-prefix-foreground = ${colors.xcolor3}
wireless-disconnected-prefix-foreground = ${colors.xcolor1}
wireless-speedup-prefix-foreground = ${colors.xcolor4}
wireless-speeddown-prefix-foreground = ${colors.xcolor2}

