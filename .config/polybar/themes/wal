# - wireless-speeddown-prefix-foreground

# module/vpncheck
# - vpn-connected-prefix-foreground

# module/playctl
# - playctl-foreground

# module/powermenu
# - powermenu-foreground

# module/music
# - music-foreground

# module/notifications
# - notifications-foreground

# module/volume
# - volume-muted-foreground
# - volume-foreground

# module/battery
# - battery-charging-foreground
# - battery-full-foreground

# module/clock
# - clock-foreground


[theme]

background = ${colors.background}
foreground = ${colors.foreground}
alert = ${colors.xcolor1}
