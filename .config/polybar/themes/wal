xwindow-prefix-foreground = ${colors.xcolor10}

xkeyboard-prefix-foreground = ${colors.xcolor1}

cpu-prefix-foreground = ${colors.xcolor1}

memory-prefix-foreground = ${colors.xcolor3}

fs-mounted-prefix-foreground = ${colors.xcolor4}

wired-connected-prefix-foreground = ${colors.xcolor3}
